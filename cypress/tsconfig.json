{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["../lib/*"],
      "@api/*": ["../app/api/*"],
      "@formBuilder/*": ["../app/(gcforms)/[locale]/(form administration)/form-builder/*"],
      "@serverComponents/*": ["../components/serverComponents/*"],
      "@clientComponents/*": ["../components/clientComponents/*"],
      "@jestFixtures/*": ["../__fixtures__/*"],
      "@jestUtils": ["../__utils__"],
      "@i18n": ["../i18n"],
      "@i18n/*": ["../i18n/*"],
      "@content/*": ["../public/static/content/*"],
      "@public/*": ["../public/*"]
    }
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx",
    "../**/*.js",
    "../**/*.jsx",
    "support/commands/selection-command.js"
  ]
}
