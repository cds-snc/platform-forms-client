{
  "name": "@gcforms/core",
  "version": "1.0.8",
  "author": "Canadian Digital Service",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.10.3",
  "dependencies": {
    "dompurify": "^3.3.0",
    "file-type": "^21.0.0",
    "tsdown": "^0.15.0"
  },
  "peerDependencies": {
    "@gcforms/types": "*"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts --watch",
    "prepack": "yarn build",
    "core:prepack": "yarn prepack"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "tsdown": {
    "entry": "src/index.ts",
    "outDir": "dist"
  },
  "files": [
    "dist",
    "src"
  ]
}
